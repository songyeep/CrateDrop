<div class="categories-index-container" style="display: none;">

  <ol class="breadcrumb">
    <li><a href="/">Categories</a></li>
  </ol>

  <div class="container flexslider" id="cat-container">
  <% @categories.each do |category| %>
    <div class="box">
      <a href="/categories/<%= category.id %>"><%= category.name %></a>
      <div class="box-image">
        <a href="/categories/<%= category.id %>"><%= image_tag(category.image) %></a>
      </div>
    </div>
  <% end %>
  </div>

</div>
